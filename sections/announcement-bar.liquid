<header class="site-announcement">
  <div class="container">
    {% if section.settings.announcement_text != blank %}
      <h3>{{ section.settings.announcement_text }}</h3>
    {% endif %}
  </div>
</header>

<style>
  .site-announcement {
    background-color: {{ section.settings.bg_color }};
    color: {{ section.settings.text_color }};
    text-align: {{ section.settings.text_align }};
  }

  .site-announcement h3 {
    font-size: {{ section.settings.font_size }}px;
    margin: 0;
  }

  {{ section.settings.custom_css }}
</style>

{% schema %}
{
  "name": "Announcement Bar",
  "settings": [
    {
      "type": "text",
      "id": "announcement_text",
      "label": "Announcement Text",
      "default": "20% Off Your First Purchase"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#FF5733"
    },
   
    
    {
      "type": "select",
      "id": "text_align",
      "label": "Text Alignment",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ],
      "default": "center"
    },
    {
      "type": "textarea",
      "id": "custom_css",
      "label": "Custom CSS",
      "default": "/* Add your custom styles here */"
    }
  ],
  "presets": [
    {
      "name": "Announcement Bar",
      "category": "Banner",
      "settings": {
        "announcement_text": "20% Off Your First Purchase",
        "text_color": "#FFFFFF",
        "bg_color": "#FF5733",
       
        "text_align": "center",
        "custom_css": "/* Example: .site-announcement { border-radius: 5px; } */"
      }
    }
  ]
}
{% endschema %}
